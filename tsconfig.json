{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017",
      "esnext"
    ],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es2017",
    "types" : [],
    "baseUrl": "./app/javascript",
    "paths": {
      "*": ["./types/*"],
      "@/*": ["./*"]
    },
  },
  "include": [
    "./app/javascript/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
